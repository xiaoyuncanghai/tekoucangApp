<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_20dp"
    android:layout_marginTop="@dimen/size_10dp">

    <ImageView
        android:id="@+id/best_product_img"
        android:layout_width="@dimen/size_110dp"
        android:layout_height="@dimen/size_100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/best_product_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="niunainiunai"
        android:textColor="@color/home_page_best_content"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/best_product_img"
        app:layout_constraintStart_toStartOf="@+id/best_product_img"
        app:layout_constraintTop_toBottomOf="@+id/best_product_img" />


    <TextView
        android:id="@+id/best_product_ot_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="$ 11"
        android:textColor="@color/home_page_clear_background"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/best_product_content" />

    <TextView
        android:id="@+id/best_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="$111"
        android:textColor="@color/home_page_clear_background"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/best_product_ot_price"
        app:layout_goneMarginStart="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>